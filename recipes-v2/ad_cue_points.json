{
  "name": "ad_cue_points",
  "title": "Advertisement Cue Points",
  "summary": "Learn how to place advertisements at specific points in your videos",
  "icon": "money",
  "steps": [
    {
      "title": "Getting Ad Cue Points",
      "description": "Use `cuePoint.list` to retrieve a list of Ad Cue Points\n\nUse a `KalturaAdCuePointBaseFilter` to retrieve only Ad cue points.",
      "apiCall": {
        "path": "/service/cuepoint_cuepoint/action/list",
        "method": "get"
      },
      "parameters": [
        {
          "name": "filter[entryIdEqual]",
          "dynamicEnum": {
            "path": "/service/media/action/list",
            "method": "get",
            "parameters": [],
            "array": "objects",
            "label": "name",
            "value": "id"
          }
        },
        {
          "name": "filter[objectType]",
          "value": "KalturaAdCuePointBaseFilter",
          "hidden": true
        }
      ]
    },
    {
      "title": "Adding a new Ad Cue Point",
      "description": "Use the controls below to add a new cue point to one of your videos",
      "apiCall": {
        "path": "/service/cuepoint_cuepoint/action/add",
        "method": "get"
      },
      "parameters": [
        {
          "name": "cuePoint[entryId]",
          "dynamicEnum": {
            "path": "/service/media/action/list",
            "method": "get",
            "parameters": [],
            "array": "objects",
            "label": "name",
            "value": "id"
          },
          "dynamicValue": {
            "fromStep": 0,
            "answer": "filter[entryIdEqual]"
          }
        },
        {
          "name": "cuePoint[sourceUrl]"
        },
        {
          "name": "cuePoint[startTime]"
        },
        {
          "name": "cuePoint[objectType]",
          "default": "KalturaAdCuePoint",
          "hidden": true
        }
      ]
    },
    {
      "title": "Retrieving an Ad Cue Point",
      "description": "Use `cuePoint.get` to get details for a specific Ad Cue Point",
      "apiCall": {
        "path": "/service/cuepoint_cuepoint/action/get",
        "method": "get"
      },
      "parameters": [
        {
          "name": "id",
          "dynamicValue": {
            "fromStep": 1,
            "value": "id"
          }
        }
      ]
    },
    {
      "title": "Viewing your Advertisement",
      "description": "Now you can see your new Cue Point wherever you embed your video.",
      "apiCall": {
        "path": "/service/media/action/get",
        "method": "get"
      },
      "parameters": [
        {
          "name": "entryId",
          "dynamicValue": {
            "fromStep": 0,
            "answer": "filter[entryIdEqual]"
          }
        },
        {
          "name": "uiConf",
          "type": "string",
          "dynamicEnum": {
            "path": "/service/uiconf/action/list",
            "method": "get",
            "array": "objects",
            "value": "id",
            "label": "name",
            "parameters": [
              {
                "name": "filter[objTypeEqual]",
                "value": 1
              }
            ]
          }
        }
      ]
    },
    {
      "title": "Deleting an Ad Cue Point",
      "description": "Use `cuePoint.delete` to remove a specific Ad Cue Point",
      "apiCall": {
        "path": "/service/cuepoint_cuepoint/action/delete",
        "method": "get"
      },
      "parameters": [
        {
          "name": "id",
          "dynamicValue": {
            "fromStep": 1,
            "value": "id"
          }
        }
      ]
    }
  ]
}