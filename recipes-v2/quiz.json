{
  "name": "quiz",
  "title": "Quiz",
  "summary": "Learn how to create a quiz and display it during playback",
  "icon": "columns",
  "steps": [
    {
      "title": "Select a Media Entry",
      "description": "Choose a video from your library to add cue points to.\n\nYou can use ```cuePoint.list``` to see what cue points are already attached.",
      "apiCall": {
        "path": "/service/cuepoint_cuepoint/action/list",
        "method": "get"
      },
      "parameters": [
        {
          "name": "filter[cuePointTypeEqual]",
          "default": "quiz.QUIZ_QUESTION",
          "hidden": true
        },
        {
          "name": "uiConf",
          "dynamicEnum": {
            "path": "/service/uiconf/action/list",
            "method": "get",
            "parameters": [
              {
                "name": "filter[orderBy]",
                "value": "-updatedAt"
              },
              {
                "name": "filter[objTypeIn]"
              },
              {
                "name": "filter[tagsMultiLikeOr]",
                "value": "quiz_player"
              }
            ],
            "array": "objects",
            "label": "name",
            "value": "id"
          }
        },
        {
          "name": "filter[entryIdEqual]",
          "dynamicEnum": {
            "path": "/service/media/action/list",
            "method": "get",
            "parameters": [],
            "array": "objects",
            "label": "name",
            "value": "id"
          }
        }
      ]
    },
    {
      "title": "Adding a Quiz question [Cue Point]",
      "description": "You can use the form below to add a question to your video."
    }
  ]
}