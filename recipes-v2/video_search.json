{
  "name": "video_search",
  "summary": "Learn how to search through your video library using Kaltura's API",
  "relatedRecipes": [
    "captions",
    "metadata"
  ],
  "icon": "search",
  "steps": [
    {
      "title": "Filtering Results",
      "description": "This is how to retrieve an array of all your videos. Use Media Entry Filters to select which content you want to show.",
      "apiCall": {
        "parameters": [
          {
            "default": "",
            "type": "text",
            "label": "Query",
            "name": "freeText"
          },
          {
            "type": "datetime",
            "name": "createdAtGreaterThanOrEqual",
            "label": "From Date"
          },
          {
            "name": "advancedSearch",
            "hidden": true,
            "default": "KalturaMetadataSearchItem"
          },
          {
            "name": "orderBy",
            "type": "select-chosen",
            "label": "Order By",
            "default": "-createdAt",
            "choices": [
              {
                "label": "CREATED_AT_ASC",
                "value": "+createdAt"
              },
              {
                "label": "DURATION_ASC",
                "value": "+duration"
              },
              {
                "label": "LAST_PLAYED_AT_ASC",
                "value": "+lastPlayedAt"
              },
              {
                "label": "NAME_ASC",
                "value": "+name"
              },
              {
                "label": "PLAYS_ASC",
                "value": "+plays"
              },
              {
                "label": "RECENT_ASC",
                "value": "+recent"
              },
              {
                "label": "START_DATE_ASC",
                "value": "+startDate"
              },
              {
                "label": "UPDATED_AT_ASC",
                "value": "+updatedAt"
              },
              {
                "label": "VIEWS_ASC",
                "value": "+views"
              },
              {
                "label": "CREATED_AT_DESC",
                "value": "-createdAt"
              },
              {
                "label": "DURATION_DESC",
                "value": "-duration"
              },
              {
                "label": "LAST_PLAYED_AT_DESC",
                "value": "-lastPlayedAt"
              },
              {
                "label": "NAME_DESC",
                "value": "-name"
              },
              {
                "label": "PLAYS_DESC",
                "value": "-plays"
              },
              {
                "label": "RECENT_DESC",
                "value": "-recent"
              },
              {
                "label": "START_DATE_DESC",
                "value": "-startDate"
              },
              {
                "label": "UPDATED_AT_DESC",
                "value": "-updatedAt"
              },
              {
                "label": "VIEWS_DESC",
                "value": "-views"
              }
            ]
          }
        ]
      }
    },
    {
      "title": "Video Player",
      "description": "Here's how to embed the results in HTML. You can select a skin by setting uiconf_id.",
      "apiCall": {
        "parameters": [
          {
            "dynamic_choices": {
              "service": "uiConf",
              "action": "list",
              "arguments": [
                {
                  "class": "KalturaUiConfFilter",
                  "parameters": {
                    "orderBy": "-updatedAt",
                    "objTypeEqual": {
                      "enum": "KalturaUiConfObjType",
                      "value": "PLAYER"
                    }
                  }
                }
              ],
              "map": {
                "value": "id",
                "label": "name"
              }
            },
            "type": "select-chosen",
            "label": "UI Configuration ID",
            "name": "uiConf",
            "required": true
          }
        ]
      }
    }
  ]
}
